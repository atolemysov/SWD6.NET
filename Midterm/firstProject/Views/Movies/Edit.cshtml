@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model firstProject.Models.Movies.Movie

@{
    ViewData["Title"] = "Edit";
}

<h1 class="title is-1">Add</h1>

<h4 class="subtitle is-4">Movie</h4>
<hr />
<div class="column is-two-fifths">
    <div class="box">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="field">
                <label asp-for="Id" class="control-label"></label>
                <div class="control">
                    <input asp-for="Id" class="input" value="ViewData['Id']"/>
                    <span asp-validation-for="Id" class="has-text-danger"></span>
                </div>
            </div>
            <div class="field">
                <label asp-for="Name" class="control-label"></label>
                <div class="control">
                    <input asp-for="Name" class="input" value="@{ViewData['Name']}"/>
                    <span asp-validation-for="Name" class="has-text-danger"></span>
                </div>
            </div>
            <div class="field">
                <label asp-for="Description" class="control-label"></label>
                <div class="control">
                    <input asp-for="Description" class="input" value="@{ViewData['Description']}"/>
                    <span asp-validation-for="Description" class="has-text-danger"></span>
                </div>
            </div>
            <div class="field">
                <label asp-for="Poster" class="control-label"></label>
                <div class="control">
                    <input asp-for="Poster" class="input" value="@{ViewData['Poster']}"/>
                    <span asp-validation-for="Poster" class="has-text-danger"></span>
                </div>
            </div>
            <div class="field">
                <label asp-for="DurationInMinutes" class="control-label"></label>
                <div class="control">
                    <input asp-for="DurationInMinutes" class="input" value="@{ViewData['DurationInMinutes']}"/>
                    <span asp-validation-for="DurationInMinutes" class="has-text-danger"></span>
                </div>
            </div>

            <div class="field is-grouped">
                <div class="control">
                    <button class="button is-link">Submit</button>
                </div>             
            </div>

            
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>