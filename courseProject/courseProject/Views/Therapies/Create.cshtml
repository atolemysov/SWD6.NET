@model courseProject.Models.Therapy

@{
    Layout = "~/Views/Shared/_SideBar.cshtml";
}
<main class="pt-4 max-lg-5">
    <div class="container-fluid">
        <div id="head" class="mb-4">
            <p>Добавление нового модуля</p>
        </div>
        <form asp-action="Create" id="add">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <label asp-for="Therapy_Name">Имя модуля</label>
            <div class="input-group md-form form-sm mb-4 w-50">
                <input asp-for="Therapy_Name" type="text" id="f1" class="form-control form-control-sm " required>
                <span asp-validation-for="Therapy_Name" class="text-danger"></span>
            </div>
            <button class="btn btn-primary text-uppercase font-weight-bold mb-5 mr-3 pt-2 pb-2" type="submit" value="Create" ><i class="fas fa-plus mr-2"></i>Добавить</button>
            <a asp-action="Index" class="btn btn-primary text-uppercase font-weight-bold mb-5 pt-2 pb-2">Назад</a>
        </form>
    </div>
</main>