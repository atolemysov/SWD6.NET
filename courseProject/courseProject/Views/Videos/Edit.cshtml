@model courseProject.Models.Video

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Edit</title>
    <link rel="stylesheet" href="~/css/bootstrap.min.css">
</head>
<body>

<h4>Video</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Desc" class="control-label"></label>
                <input asp-for="Desc" class="form-control" />
                <span asp-validation-for="Desc" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Url_Video" class="control-label"></label>
                <input asp-for="Url_Video" class="form-control" />
                <span asp-validation-for="Url_Video" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TherapyId" class="control-label"></label>
                <select asp-for="TherapyId" class="form-control" asp-items="ViewBag.TherapyId"></select>
                <span asp-validation-for="TherapyId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

</body>
</html>
