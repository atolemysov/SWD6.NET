@model courseProject.Models.User_Answers

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Edit</title>
    <link rel="stylesheet" href="~/css/bootstrap.min.css">
</head>
<body>

<h4>User_Answers</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <!--<input type="hidden" asp-for="UserId" />
            <input type="hidden" asp-for="SurveyId" />-->
            <div class="form-group">
                <label id="UserId" name="UserId" class="control-label">Course Id</label>
                <input id="UserId" name ="UserId"class="form-control" value="@Model.UserId" disabled/>
            </div>
            <div class="form-group">
                <label id="SurveyId" name="SurveyId" class="control-label">Member id</label>
                <input id="SurveyId" name="SurveyId" class="form-control" value="@Model.SurveyId" disabled/>
            </div>
            <div class="form-group">
                <label asp-for="Answer" class="control-label"></label>
                <input asp-for="Answer" class="form-control" />
                <span asp-validation-for="Answer" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>
<div>
    <a asp-action="Index">Back to List</a>
</div>

</body>
</html>
